<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Button" parent="Widget.Material3.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">24sp</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="rippleColor">@color/grey</item>
    </style>
    
    <style name="WhiteText.Button" parent="Base.Button">
        <item name="android:textColor"> @color/white</item>
    </style>

    <style name="OrangeText.Button" parent="Base.Button">
        <item name="android:textColor"> @color/orange</item>
    </style>


</resources>