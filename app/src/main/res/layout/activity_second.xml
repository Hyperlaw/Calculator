<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="@color/dark">

    <View
        android:id="@+id/card"
        android:layout_marginVertical="56dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/bg_figma"/>

    <View
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="120dp"
        android:layout_height="28dp"
        android:background="@drawable/bg_blue"/>

    <TextView
        android:id="@+id/text_view"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Explore the nightlife of your city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp"/>

    <TextView
        android:id="@+id/category"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="72dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/next_button"
        android:layout_marginTop="60dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="6dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="@color/black"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="@string/select"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:textColor="@color/black"
                    android:id="@+id/dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:background="@drawable/bg_radius"/>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:layout_marginStart="16dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="6dp"/>

                <SeekBar
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@drawable/custom_thumb"
                    android:progressTint="@color/purple"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="70dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accessibility"
                    android:layout_marginStart="16dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="6dp"/>

                <SeekBar
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@drawable/custom_thumb"
                    android:progressTint="@color/purple"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:id="@+id/heartButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_heart" />




    <Button
        android:id="@+id/next_button"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/card"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_button"
        android:text="Next"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>





    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingStart="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="free"
                android:paddingStart="6dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="PriceðŸ’°"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="50dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_user"/>

                <ImageView
                    android:layout_marginStart="4dp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_user2"/>

                <ImageView
                    android:layout_marginStart="4dp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_user3"/>

                <ImageView
                    android:layout_marginStart="4dp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_user4"/>
            </LinearLayout>

            <TextView
                android:layout_marginStart="28dp"
                android:text="Participants"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="80dp"
                android:layout_height="12dp"
                android:background="@drawable/bg_green_red"/>

            <TextView
                android:layout_marginStart="6dp"
                android:textColor="@color/black"
                android:text="Accessibility"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>